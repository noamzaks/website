---
export interface Props {
    width?: number | string | undefined | null;
    height?: number | string | undefined | null;
}

const { width, height } = Astro.props;
---

<svg
    width={width}
    height={height}
    xmlns="http://www.w3.org/2000/svg"
    viewBox="0 0 512 512"
>
    <rect x="0" y="0" width="100%" height="100%" fill="rgb(35, 114, 224)"
    ></rect>
    <path
        d="M336 16 L496 16 L336 496 L496 496"
        fill-opacity="0"
        stroke="white"
        stroke-width="10"
        class="logo-path slow"></path>
    <path
        d="M16 496 L176 16 L176 496 L336 16"
        fill-opacity="0"
        stroke="white"
        stroke-width="10"
        class="logo-path"></path>
</svg>

<style>
    .logo-path {
        stroke-dasharray: 2000;
        stroke-dashoffset: 2000;
        animation: dash 2s ease forwards;
    }

    .logo-path.slow {
        animation-delay: 500ms;
    }

    @keyframes dash {
        to {
            stroke-dashoffset: 0;
        }
    }
</style>
